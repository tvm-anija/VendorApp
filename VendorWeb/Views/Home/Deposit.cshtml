@model VendorWeb.Models.User
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpAcc

<h1>Deposit</h1>
<form method="post" asp-action="Deposit">
    <div class="row px-2 mx-2 backgroundWhite border">

        <div class="form-group row">
            <div class="col-4">
                <label>5 *</label>
            </div>
            <div class="col-8">
                <input type="number" name="5" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>10 *</label>
            </div>
            <div class="col-8">
                <input type="number" name="10" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>20 *</label>
            </div>
            <div class="col-8">
                <input type="number" name="20" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>50 *</label>
            </div>
            <div class="col-8">
                <input type="number" name="50" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>100 *</label>
            </div>
            <div class="col-8">
                <input type="number" name="100" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>Total Deposit</label>
            </div>
            <div class="col-8">
                <input id="txtDeposit" asp-for="Deposit" class="form-control" readonly />
            </div>
        </div>
        <div class="col-8">


            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        Add To Deposit
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
        @*<div class="col-4 text-right" style="width:250px;">
                <img src="https://via.placeholder.com/150" width="100%" />
            </div>*@
    </div>
</form>
@section Scripts {


    <script type="text/javascript">
        var arr = [{ "key": 5, "value": 0 }, { "key": 10, "value": 0 }, { "key": 20, "value": 0 }, { "key": 50, "value": 0 }, {"key": 100,"value": 0 }];
        $(":input").bind('keyup mouseup', function (e) {
            var value = 0;
            var name = 0;
            var total = 0;
            value=e.currentTarget.value;
            name = e.currentTarget.name;
            for (var i = 0; i < 5; i++) {
                var key = arr[i].key;
                if (key == name) {
                            arr[i].value = value;
                        }
                }
            for (var i = 0; i < 5; i++) {
                total = total+(arr[i].value * arr[i].key);
            }
            document.getElementById('txtDeposit').value = total;
        });
    </script>
}